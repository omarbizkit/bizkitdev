---
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout
  title="My Work | Omar Torres"
  description="Explore Omar Torres's data and AI projects"
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <div class="text-center py-20">
        <h1 class="text-4xl font-bold mb-6">My Work</h1>
        <p class="text-xl text-gray-400 mb-8">See my most recent projects below to get an idea of my past experience.</p>
        <a href="/#projects" class="inline-flex items-center gap-2 px-6 py-3 bg-cyan-500 hover:bg-cyan-400 text-white font-medium rounded-lg transition-all duration-200 hover:shadow-md hover:shadow-cyan-400/20 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900">
          View All Projects
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </main>
  </div>
</BaseLayout>
