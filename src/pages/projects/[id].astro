---
export const prerender = true;

import CleanLayout from '../../layouts/CleanLayout.astro';
import StatusBadge from '../../components/StatusBadge.astro';
import TechStack from '../../components/TechStack.astro';
import OptimizedImage from '../../components/OptimizedImage.astro';
import SEO from '../../components/SEO.astro';
import projectsData from '../../content/projects.json';
import type { Project } from '../../types/index.ts';
import StructuredData from '../../components/StructuredData.astro';

export async function getStaticPaths() {
  const projects = projectsData.projects as Project[];
  
  return projects.map((project) => ({
    params: { id: project.id },
    props: { project }
  }));
}

const { project } = Astro.props as { project: Project };

const pageTitle = `${project.name} - bizkit.dev`;
const pageDescription = project.description_short;
---

<CleanLayout title={pageTitle} description={pageDescription}>
  <SEO 
    slot="head"
    title={pageTitle}
    description={pageDescription}
    canonical={`https://bizkit.dev/projects/${project.id}`}
    image={project.screenshot_url}
    type="article"
  />

  <div class="min-h-screen pt-20">
    <!-- Project Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/10 to-purple-500/10"></div>
      <div class="relative max-w-6xl mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Project Info -->
          <div class="space-y-6">
            <!-- Back Link -->
            <a 
              href="/#projects" 
              class="inline-flex items-center text-cyan-400 hover:text-cyan-300 transition-colors mb-4"
              aria-label="Back to projects"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              Back to Projects
            </a>

            <!-- Project Title & Status -->
            <div class="space-y-4">
              <div class="flex items-start justify-between gap-4">
                <h1 class="text-4xl md:text-5xl font-bold leading-tight">
                  <span class="bg-gradient-to-r from-cyan-400 to-purple-500 bg-clip-text text-transparent">
                    {project.name}
                  </span>
                </h1>
                <StatusBadge status={project.status} />
              </div>
              
              <p class="text-xl text-gray-300 leading-relaxed" data-testid="project-description">
                {project.description_short}
              </p>
            </div>

            <!-- Tech Stack -->
            <div class="space-y-3" data-testid="tech-stack">
              <h3 class="text-lg font-semibold text-gray-200">Technologies Used</h3>
              <TechStack techStack={project.tech_stack} showNames={true} />
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-wrap gap-4 pt-4">
              {project.status === 'live' && project.subdomain_url && (
                <a
                  href={project.subdomain_url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-lg font-semibold text-white hover:from-cyan-400 hover:to-purple-500 transition-all duration-300 hover:shadow-lg hover:shadow-cyan-500/25 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900"
                >
                  <span>Launch App</span>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
              )}
              
              {project.github_url && (
                <a
                  href={project.github_url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-6 py-3 border-2 border-gray-600 rounded-lg font-semibold text-gray-300 hover:border-cyan-400 hover:text-cyan-400 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900"
                >
                  <span>View Source</span>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>

          <!-- Project Screenshot -->
          <div class="relative">
            {project.screenshot_url ? (
              <div class="relative rounded-xl overflow-hidden shadow-2xl shadow-cyan-500/20">
                <OptimizedImage
                  src={project.screenshot_url}
                  alt={`Screenshot of ${project.name} application`}
                  class="w-full h-auto"
                  width={600}
                  height={400}
                />
                <div class="absolute inset-0 bg-gradient-to-t from-gray-900/20 via-transparent to-transparent rounded-xl"></div>
              </div>
            ) : (
              <div class="aspect-video bg-gray-800 rounded-xl flex items-center justify-center">
                <div class="text-center text-gray-500">
                  <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <p>Screenshot coming soon</p>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Project Details Section -->
    <section class="py-20 bg-gray-900/50">
      <div class="max-w-4xl mx-auto px-6">
        <div class="prose prose-lg prose-invert max-w-none">
          <h2 class="text-3xl font-bold mb-8 text-white">Project Overview</h2>
          
          <div class="text-gray-300 leading-relaxed space-y-6">
            {project.description_long.split('\n').map(paragraph => (
              paragraph.trim() && <p>{paragraph.trim()}</p>
            ))}
          </div>

          <!-- Project Meta Info -->
          <div class="grid md:grid-cols-2 gap-8 mt-16 pt-8 border-t border-gray-700">
            <div>
              <h3 class="text-xl font-semibold mb-4 text-white">Project Details</h3>
              <dl class="space-y-3">
                <div>
                  <dt class="text-gray-400 text-sm uppercase tracking-wide">Status</dt>
                  <dd class="mt-1">
                    <StatusBadge status={project.status} />
                  </dd>
                </div>
                <div>
                  <dt class="text-gray-400 text-sm uppercase tracking-wide">Created</dt>
                  <dd class="text-gray-300 mt-1">
                    {new Date(project.created_date).toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long',
                      day: 'numeric'
                    })}
                  </dd>
                </div>
                {project.featured && (
                  <div>
                    <dt class="text-gray-400 text-sm uppercase tracking-wide">Featured Project</dt>
                    <dd class="text-cyan-400 mt-1 flex items-center gap-1">
                      <span>‚≠ê</span>
                      <span>Yes</span>
                    </dd>
                  </div>
                )}
              </dl>
            </div>

            <div>
              <h3 class="text-xl font-semibold mb-4 text-white">Technology Stack</h3>
              <div class="space-y-4">
                <TechStack techStack={project.tech_stack} showNames={true} />
                <p class="text-sm text-gray-500 mt-2">
                  {project.tech_stack.length} technologies used in this project
                </p>
              </div>
            </div>
          </div>

          <!-- Call to Action -->
          <div class="mt-16 p-8 bg-gray-800/50 rounded-xl border border-gray-700">
            <h3 class="text-2xl font-bold mb-4 text-center">
              <span class="bg-gradient-to-r from-cyan-400 to-purple-500 bg-clip-text text-transparent">
                Interested in Similar Projects?
              </span>
            </h3>
            <p class="text-gray-300 text-center mb-6">
              Let's discuss how we can work together on your next AI or data science project.
            </p>
            <div class="text-center">
              <a 
                href="mailto:omarbizkit@hotmail.com?subject=Project Inquiry - {project.name}"
                class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-lg font-semibold text-white hover:from-cyan-400 hover:to-purple-500 transition-all duration-300 hover:shadow-lg hover:shadow-cyan-500/25 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-800"
              >
                üìß Get In Touch
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Projects -->
    <section class="py-20">
      <div class="max-w-6xl mx-auto px-6">
        <h2 class="text-3xl font-bold text-center mb-12">
          <span class="bg-gradient-to-r from-cyan-400 to-purple-500 bg-clip-text text-transparent">
            Explore More Projects
          </span>
        </h2>
        <div class="text-center">
          <a 
            href="/#projects" 
            class="inline-flex items-center gap-2 px-6 py-3 border-2 border-cyan-400 rounded-lg font-semibold text-cyan-400 hover:bg-cyan-400 hover:text-gray-900 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            <span>View All Projects</span>
          </a>
        </div>
      </div>
    </section>
  </div>

  <!-- Structured Data for Project SEO Enhancement -->
  <StructuredData type="project" data={project} />
</CleanLayout>