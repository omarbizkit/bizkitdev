<script>
  // Function to open cookie preferences
  function openCookiePreferences() {
    // Try to trigger the consent manager's customize action
    const consentManager = document.querySelector('[data-testid="consent-manager"]');
    const customizeBtn = consentManager?.querySelector('[data-action="customize"]');

    if (customizeBtn) {
      customizeBtn.click();
    } else {
      // Fallback: Show an alert if consent manager isn't available
      alert('Cookie preference center is not available. Please visit the homepage to manage your cookie preferences.');
    }
  }

  // Set up event listeners for cookie preference buttons
  document.addEventListener('DOMContentLoaded', () => {
    const preferenceButtons = [
      'open-cookie-preferences',
      'open-cookie-preferences-main',
      'open-cookie-preferences-footer'
    ];

    preferenceButtons.forEach(id => {
      const button = document.getElementById(id);
      if (button) {
        button.addEventListener('click', openCookiePreferences);
      }
    });
  });
</script>