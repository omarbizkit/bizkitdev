---
// OAuth callback page for Supabase
export const prerender = false
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signing in...</title>
  <style>
    body {
      font-family: system-ui, -apple-system, sans-serif;
      background: #0a0a0a;
      color: #ffffff;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
    }
    .container {
      text-align: center;
      padding: 2rem;
    }
    .spinner {
      width: 40px;
      height: 40px;
      border: 3px solid #333;
      border-top: 3px solid #00ffff;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 1rem;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="spinner"></div>
    <h2>Signing you in...</h2>
    <p>Please wait while we complete your authentication.</p>
  </div>

  <script>
    console.log('OAuth callback page loaded');
    
    // Simple fallback - redirect to home after a short delay
    setTimeout(() => {
      console.log('Redirecting to home page...');
      const urlParams = new URLSearchParams(window.location.search);
      const next = urlParams.get('next') || '/';
      window.location.href = next + '?auth=callback_complete';
    }, 2000);
    
    // Try to handle Supabase OAuth callback
    try {
      // Check if we have URL parameters that indicate OAuth completion
      const urlParams = new URLSearchParams(window.location.search);
      const code = urlParams.get('code');
      const error = urlParams.get('error');
      
      console.log('URL params:', { code: !!code, error });
      
      if (error) {
        console.error('OAuth error:', error);
        window.location.href = '/?error=oauth_error&message=' + encodeURIComponent(error);
        return;
      }
      
      if (code) {
        console.log('OAuth code received, processing...');
        // OAuth code is present, redirect to home
        const next = urlParams.get('next') || '/';
        window.location.href = next + '?auth=success&code_received=true';
        return;
      }
      
      // No code or error, just redirect after delay
      console.log('No OAuth parameters found, redirecting...');
      
    } catch (error) {
      console.error('Callback processing error:', error);
      window.location.href = '/?error=callback_error&message=' + encodeURIComponent(error.message);
    }
  </script>
</body>
</html>
