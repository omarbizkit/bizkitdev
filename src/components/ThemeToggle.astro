---
// Theme Toggle Component
---

<button 
  id="theme-toggle"
  class="theme-toggle fixed top-20 right-6 z-50 w-12 h-12 rounded-full border-2 border-current backdrop-blur-lg transition-all duration-300 flex items-center justify-center group hover:scale-110"
  aria-label="Toggle theme"
>
  <!-- Sun icon (for light theme) -->
  <svg class="sun-icon w-5 h-5 transition-opacity duration-300" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
  </svg>
  
  <!-- Moon icon (for dark theme) -->
  <svg class="moon-icon w-5 h-5 transition-opacity duration-300" fill="currentColor" viewBox="0 0 20 20">
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
  </svg>
</button>

<style>
  .theme-toggle {
    background: rgba(0, 0, 0, 0.3);
    color: var(--accent-cyan);
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
  }
  
  .theme-toggle:hover {
    box-shadow: 0 0 30px rgba(0, 255, 255, 0.5);
  }
  
  /* Theme-specific visibility */
  [data-theme="dark"] .theme-toggle .sun-icon {
    opacity: 0;
  }
  
  [data-theme="dark"] .theme-toggle .moon-icon {
    opacity: 1;
  }
  
  [data-theme="light"] .theme-toggle .sun-icon {
    opacity: 1;
  }
  
  [data-theme="light"] .theme-toggle .moon-icon {
    opacity: 0;
  }
  
  /* Light theme styles */
  [data-theme="light"] .theme-toggle {
    background: rgba(255, 255, 255, 0.3);
    color: var(--accent-purple);
    box-shadow: 0 0 20px rgba(159, 64, 255, 0.3);
  }
  
  [data-theme="light"] .theme-toggle:hover {
    box-shadow: 0 0 30px rgba(159, 64, 255, 0.5);
  }
</style>

<script>
  function initThemeToggle() {
    const toggle = document.getElementById('theme-toggle');
    const html = document.documentElement;
    
    // Check for saved theme or default to dark
    const savedTheme = localStorage.getItem('theme') || 'dark';
    html.setAttribute('data-theme', savedTheme);
    
    // Apply theme-specific classes
    applyTheme(savedTheme);
    
    toggle?.addEventListener('click', () => {
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      
      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      
      applyTheme(newTheme);
    });
  }
  
  function applyTheme(theme: string) {
    const body = document.body;
    
    if (theme === 'light') {
      body.classList.add('light-theme');
      body.classList.remove('dark-theme');
    } else {
      body.classList.add('dark-theme');
      body.classList.remove('light-theme');
    }
  }
  
  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initThemeToggle);
  
  // Re-initialize on navigation for Astro
  document.addEventListener('astro:page-load', initThemeToggle);
</script>