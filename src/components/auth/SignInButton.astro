---
// SignInButton.astro
// Google OAuth sign-in button component

interface Props {
  redirectTo?: string
}

const { redirectTo = '/' } = Astro.props
---

<button
  id="signin-button"
  class="signin-button"
  data-redirect-to={redirectTo}
  aria-label="Sign in with Google"
  type="button"
>
  <svg class="google-icon" viewBox="0 0 24 24" aria-hidden="true">
    <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
  </svg>
  <span>Sign in with Google</span>
</button>

<script>
  const button = document.getElementById('signin-button') as HTMLButtonElement

  if (button) {
    button.addEventListener('click', async () => {
      const redirectTo = button.dataset.redirectTo || '/'

      try {
        button.disabled = true
        button.textContent = 'Signing in...'

        const response = await fetch('/api/auth/signin', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ redirectTo })
        })

        if (!response.ok) {
          throw new Error('Sign-in failed')
        }

        const { url } = await response.json()

        if (url) {
          window.location.href = url
        }
      } catch (error) {
        console.error('Sign-in error:', error)
        button.disabled = false
        button.innerHTML = `
          <svg class="google-icon" viewBox="0 0 24 24" aria-hidden="true">
            <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          <span>Sign in with Google</span>
        `
        alert('Failed to sign in. Please try again.')
      }
    })
  }
</script>

<style>
  .signin-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--gray-0);
    background: radial-gradient(var(--gray-900), var(--gray-800) 150%);
    border: 1px solid var(--gray-700);
    border-radius: 999rem;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .signin-button::before {
    position: absolute;
    inset: -1px;
    content: '';
    background: var(--gradient-stroke);
    border-radius: 999rem;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .signin-button:hover::before {
    opacity: 1;
  }

  .signin-button:hover {
    color: var(--gray-0);
    background: radial-gradient(var(--gray-800), var(--gray-700) 150%);
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
  }

  .signin-button:focus-visible {
    outline: 2px solid #00ffff;
    outline-offset: 2px;
  }

  .signin-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .google-icon {
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .signin-button {
      border: 2px solid currentColor;
    }
  }

  /* Reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .signin-button,
    .signin-button::before {
      transition: none;
    }
  }
</style>
