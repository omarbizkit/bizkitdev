---
interface Props {
  title: string
  tagline?: string
  align?: 'start' | 'center'
}

const { align = 'center', tagline, title } = Astro.props
---

<div class:list={['hero stack gap-4', align]}>
  <div class="stack gap-2">
    <h1 class="title animate-glow">{title}</h1>
    {tagline && <p class="tagline text-glow">{tagline}</p>}
  </div>
  <slot />
</div>

<style>
  .hero {
    font-size: var(--text-lg);
    text-align: center;
  }

  .title,
  .tagline {
    max-width: 37ch;
    margin-inline: auto;
  }

  .title {
    font-size: var(--text-3xl);
    color: var(--gray-0);
    background: linear-gradient(135deg, #00ffff 0%, #9f40ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-family: var(--font-brand);
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .tagline {
    color: #00ffffcc;
    font-family: var(--font-mono);
    font-size: 0.9em;
    letter-spacing: 0.05em;
  }

  @media (min-width: 50em) {
    .hero {
      font-size: var(--text-xl);
    }

    .start {
      text-align: start;
    }

    .start .title,
    .start .tagline {
      margin-inline: unset;
    }

    .title {
      font-size: var(--text-5xl);
    }
  }
</style>
