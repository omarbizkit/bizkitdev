---
interface Props {
  href?: string;
  class?: string;
}

const {
  href = '#main-content',
  class: className = ''
} = Astro.props;
---

<a 
  href={href}
  class={`skip-link ${className}`}
  tabindex="0"
>
  Skip to main content
</a>

<style>
  .skip-link {
    position: absolute;
    top: -40px;
    left: 6px;
    z-index: 1000;
    padding: 8px 16px;
    background: #1a1a1a;
    color: #00ffff;
    text-decoration: none;
    border-radius: 4px;
    border: 2px solid #00ffff;
    font-weight: 600;
    transition: top 0.2s ease;
  }
  
  .skip-link:focus {
    top: 6px;
    outline: 2px solid #00ffff;
    outline-offset: 2px;
  }
  
  .skip-link:hover {
    background: #00ffff;
    color: #1a1a1a;
  }
  
  /* High contrast mode */
  @media (prefers-contrast: high) {
    .skip-link {
      border-width: 3px;
      font-weight: 700;
    }
  }
  
  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .skip-link {
      transition: none;
    }
  }
</style>