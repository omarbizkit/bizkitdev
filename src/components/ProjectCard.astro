---
import StatusBadge from './StatusBadge.astro';
import TechStack from './TechStack.astro';
import OptimizedImage from './OptimizedImage.astro';
import type { Project } from '../types/index.ts';

export interface Props {
  project: Project;
  featured?: boolean;
}

const { project, featured = false } = Astro.props;
const isClickable = project.status !== 'idea';
---

<article
  class={`group relative bg-gradient-to-br from-gray-900/80 to-gray-800/40 border border-gray-700/50 rounded-xl overflow-hidden hover:border-cyan-400/50 transition-all duration-300 hover:shadow-lg hover:shadow-cyan-400/10 flex flex-col h-full ${featured ? 'ring-1 ring-cyan-400/30' : ''}`}
  role="article"
  aria-labelledby={`project-title-${project.id}`}
  data-testid="project-card"
>
  {featured && (
    <div class="absolute top-4 left-4 z-10">
      <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium bg-cyan-500/20 text-cyan-400 border border-cyan-500/30">
        <span aria-hidden="true">‚≠ê</span>
        Featured
      </span>
    </div>
  )}

  <!-- Project Screenshot -->
  <div class="relative h-48 overflow-hidden bg-gray-800">
    {project.screenshot_url ? (
      <OptimizedImage
        src={project.screenshot_url}
        alt={`Screenshot of ${project.name} project`}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
        width={400}
        height={300}
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-gray-500">
        <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
    )}
    
    <!-- Status Badge Overlay -->
    <div class="absolute top-4 right-4">
      <StatusBadge status={project.status} />
    </div>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/60 via-transparent to-transparent"></div>
  </div>

  <!-- Project Content -->
  <div class="p-6 flex flex-col flex-1">
    <!-- Project Title -->
    <h3 id={`project-title-${project.id}`} class="text-xl font-bold text-white mb-3 group-hover:text-cyan-400 transition-colors">
      {project.name}
    </h3>
    
    <!-- Project Description -->
    <p class="text-gray-300 mb-4 line-clamp-3 leading-relaxed">
      {project.description_short}
    </p>
    
    <!-- Tech Stack -->
    <div class="mb-6 min-h-[3rem] flex items-start flex-grow">
      <TechStack techStack={project.tech_stack} limit={6} />
    </div>
    
    <!-- Action Buttons -->
    <div class="flex items-center justify-between gap-3">
      <div class="flex items-center gap-2 flex-1">
        {isClickable ? (
          <a
            href={`/projects/${project.id}`}
            class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-500 hover:bg-cyan-400 text-white font-medium rounded-lg transition-all duration-200 hover:shadow-md hover:shadow-cyan-400/20 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900"
            aria-label={`View details for ${project.name}`}
          >
            <span>View Details</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        ) : (
          <span class="inline-flex items-center gap-2 px-4 py-2 bg-gray-600 text-gray-400 font-medium rounded-lg cursor-not-allowed">
            <span>Coming Soon</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </span>
        )}
      </div>
      
      <!-- External Links -->
      <div class="flex items-center gap-2">
        {project.github_url && (
          <a
            href={project.github_url}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900"
            aria-label={`View ${project.name} source code on GitHub`}
            title="View Source Code"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        )}
        
        {project.subdomain_url && project.status === 'live' && (
          <a
            href={project.subdomain_url}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900"
            aria-label={`Launch ${project.name} application`}
            title="Launch App"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        )}
      </div>
    </div>
  </div>
  
  <!-- Created Date -->
  <div class="px-6 pb-4">
    <time 
      datetime={project.created_date}
      class="text-sm text-gray-500"
      title="Project created date"
    >
      Created {new Date(project.created_date).toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long',
        day: 'numeric'
      })}
    </time>
  </div>
</article>

<style>
.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>