{
  "name": "bizkitdev-portfolio",
  "type": "module",
  "version": "1.0.0",
  "description": "Modern portfolio website for bizkit.dev with dark neon sci-fi theme",
  "scripts": {
    "dev": "astro dev --port 4321",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest tests/unit",
    "test:unit": "vitest run tests/unit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:contract": "vitest run -c vitest.contract.config.ts",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:all": "npm run test:unit && npm run test:contract && npm run test:integration && npm run test:e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "astro check",
    "type-check": "astro check",
    "docker:build": "podman build --build-arg PUBLIC_SUPABASE_URL=https://mock.supabase.co --build-arg PUBLIC_SUPABASE_ANON_KEY=mock-anon-key --build-arg PUBLIC_SITE_URL=http://localhost:3000 -t bizkitdev-portfolio .",
    "docker:run": "podman run -p 3000:3000 bizkitdev-portfolio",
    "docker:dev": "podman-compose --env-file .env.docker --profile dev up -d",
    "docker:prod": "podman-compose --env-file .env.docker up -d",
    "docker:stop": "podman-compose down",
    "docker:test": "podman-compose --env-file .env.docker up --build -d && sleep 10 && curl http://localhost:3000 && podman-compose down",
    "docker:logs": "podman-compose logs -f app"
  },
  "dependencies": {
    "@astrojs/node": "^9.4.3",
    "@astrojs/tailwind": "^6.0.2",
    "@supabase/supabase-js": "^2.57.4",
    "@tailwindcss/typography": "^0.5.16",
    "astro": "^5.13.7"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@playwright/test": "^1.55.0",
    "@types/deep-eql": "^4.0.2",
    "@types/ms": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "puppeteer": "^24.20.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
